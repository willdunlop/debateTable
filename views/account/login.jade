extends ../layout

block content
  .container
    h1 Login Page 
    p.lead Please enter your username and password 
    br
    form(role='form', action="/login",method="post", style='max-width: 300px')
      .form-group
        input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Enter Password')
      button.btn.btn-primary(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-default(type="button") Cancel
